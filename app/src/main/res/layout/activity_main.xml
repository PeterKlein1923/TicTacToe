<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.peter.tictactoe.MainActivity">

    <Button
        android:layout_height="100dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="42dp"
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />

    <Button
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/button12"
        android:layout_width="100dp"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:id="@+id/button13"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button11"
        android:layout_toLeftOf="@+id/button12"
        android:layout_toStartOf="@+id/button12"
        android:id="@+id/button14"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button12"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:id="@+id/button15"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button16"
        android:layout_below="@+id/button12"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button14"
        android:layout_alignLeft="@+id/button14"
        android:layout_alignStart="@+id/button14"
        android:id="@+id/button17"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button18"
        android:layout_alignBottom="@+id/button17"
        android:layout_toRightOf="@+id/button17"
        android:layout_toEndOf="@+id/button17"
        android:layout_below="@+id/button14"
        android:onClick="onClick" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button15"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15"
        android:id="@+id/button19"
        android:onClick="onClick" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11"
        android:id="@+id/textView2"
        android:textAlignment="center" />

    <Button
        android:text="Play Again!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/button20"
        android:onClick="playAgain" />
</RelativeLayout>
